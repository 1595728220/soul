@import "../../style/stylesheet.wxss";
/* components/squareitem/squareitem.wxss */
.square-item{
  padding:40rpx 20rpx 10rpx;
  color:#666;
  font-size:24rpx;
  display:flex;
  border-bottom:1px solid #e3e3e3;
}
.square-img{
  width:64rpx;
  height:64rpx;
  border-radius: 50%;
}
.square-detail{
  flex-grow: 1;
  margin-left:20rpx;
}
.square-nick{
  color:#34DBD7;
  font-size:28rpx;
}
.square-time{
  color:#999;
}
.square-content{
  margin-top:40rpx;
  color:#333;
  font-size:30rpx;
}
.bottom-button{
  margin-top:20rpx;
  display:flex;
  justify-content: space-around;
}
.iconfont{
  font-size:56rpx;
}
.iconfont>text{
  font-size:24rpx;
  color:#666;
}
.icon-xihuan{
  color:#CC0001;
}
.icon-fanhui{
  font-size:64rpx;
  /* transform: rotate(180deg) */
}
.imgList {
  display: flex;
  flex-wrap: wrap;
  width:450rpx;
}

.imgItem {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid transparent;
  position: relative;
  margin-top:10rpx;
  margin-left:10rpx;
}

.imgItem image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}