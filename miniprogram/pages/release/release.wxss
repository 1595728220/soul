/* pages/release/release.wxss */

.control {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx 10rpx;
  margin-top: 50rpx;
  border-bottom: 1px solid #eee;
}

.icon {
  display: flex;
  align-items: center;
}

.iconfont {
  font-size: 70rpx;
  margin-left: 20rpx;
}

.imgList {
  display: flex;
  margin-top: 50rpx;
  flex-wrap: wrap;
}

.imgItem {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid transparent;
  margin-left: 10rpx;
  position: relative;
  margin-top:10rpx;
}

image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.cancel{
  position: absolute;
  right:0;
  top:0;
  margin:8rpx 18rpx 0 0;
  color:#fff;
}
.add{
  font-size:100rpx;
  background:#eee;
  color:#fff;
  text-align:center;
  line-height: 200rpx;
  border-radius: 10rpx;
}