/* pages/self/self.wxss */

.self {
  background: #eee;
  padding-bottom: 50rpx;
  min-height:100vh;
  position:relative;
}

.clear:after {
  content: "";
  display: block;
  clear: both;
}

.user {
  position: relative;
  height: 400rpx;
  width: 100%;
  background: #0aa1ed;
  z-index:2;
}

.avatar {
  overflow: hidden;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border:5rpx solid #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -90rpx);
}

.user-nick {
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, 100rpx);
}

.moment {
  /* background: #eee; */
  height: 100%;
  padding-top: 20rpx;
}

.moment-item {
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  width: 80%;
  padding: 20rpx;
  float: right;
  margin-right: 30rpx;
  margin-top:20rpx;
}

.moment-time {
  color: #ccc;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  z-index: 1;
}

.triangle {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 0;
  top: 40rpx;
  transform: translate(-20%, 0) rotate(45deg);
  background: #fff;
  z-index: 0;
}

.moment-bar {
  width: 5rpx;
  height: 100%;
  position: absolute;
  background: #bbb;
  margin-left: 30rpx;
  top:0;
}

.sun, .moon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: -80rpx;
  top: 40rpx;
  z-index: 2;
}

.moment-img {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.moment-img>.img {
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
  border: 1px solid transparent;
}

.moment-img>.img>image {
  width: 100%;
  height: 100%;
}
