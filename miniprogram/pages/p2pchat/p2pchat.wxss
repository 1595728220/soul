/* pages/p2pchat/p2pchat.wxss */
.msg {
  padding: 50rpx;
  background: #eee;
  min-height: 100vh;
  margin-bottom:100rpx;
}

.sendButton {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index:10;
}

.recive {
  position: relative;
  width: 100%;
  margin-bottom: 30rpx;
}

.recive > .image {
  width: 80rpx;
  height: 80rpx;
  position:absolute;
  top:0;
  left:0;
}

.recive > .square {
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  transform: rotate(45deg);
  position: absolute;
  top: 25rpx;
  left: 90rpx;
}

.recive>.qipao {
  padding: 18rpx 30rpx;
  max-width: 50%;
  background: #fff;
  /* position: absolute;
  top: 0;
  left: 100rpx; */
  margin-left:100rpx;
  border-radius: 12rpx;
  display:inline-block;
  overflow-x: hidden;
  z-index:2;
}


.own {
  position: relative;
  width: 100%;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row-reverse;
}

.own > .image {
  width: 80rpx;
  height: 80rpx;
  position:absolute;
  top:0;
  right:0;
}
image{
  width:100%;
  height:100%;
}

.own > .square {
  width: 20rpx;
  height: 20rpx;
  background: #9eea6a;
  transform: rotate(45deg);
  position: absolute;
  top: 25rpx;
  right: 90rpx;
}

.own>.qipao {
  padding: 18rpx 30rpx;
  max-width: 70%;
  background: #9eea6a;
  /* position: absolute; */
  /* top: 0; */
  /* right: 100rpx; */
  margin-right: 100rpx;
  border-radius: 12rpx;
  display:inline-block;
  overflow-x: hidden;
  z-index:2;
}
